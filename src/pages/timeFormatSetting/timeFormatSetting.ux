<template>
	<div class="page" style="flex-direction: column;">

	  <list class="list">
		<list-item class="item {{onSelect==1?'item2':''}}" @click="select('1')" type="item">
			<div class="item-content">
				<text class="itemtext">24小时制</text>
				<marquee class="itemtext2" scrollamount="20">例如：13:45</marquee>
			</div>
			<img src="/common/images/check.png" style="width:40px;height: 40px;" if="{{onSelect==1}}"/>
		</list-item>
		  <list-item class="item {{onSelect==2?'item2':''}}" @click="select('2')" type="item">
			<div class="item-content">
				<text class="itemtext">12小时制</text>
				<marquee class="itemtext2" scrollamount="20">例如：下午 1:45</marquee>
			</div>
			  <img src="/common/images/check.png" style="width:40px;height: 40px;" if="{{onSelect==2}}"/>
		  </list-item>
	  </list>
	  
	  <img static src="/common/images/hd.png" style="position: absolute;left: 0px;top: 0px;width: 212px;height: 102px;" />
	  <text style="position: absolute;top:-100px;left:0px;">{{txtNum}}</text>

		
		<text style="position: absolute;left: 54px;top: 12px;width: 104px;line-height: 32px;font-weight:bold;font-size:20px;color:rgba(255,255,255,0.6);text-align:center;">
		  {{nowTime}}
		</text>
		<text style="position: absolute;left: 34px;top: 40px;width: 144px;line-height: 42px;font-weight:bold;font-size:28px;color:white;text-align:center;">
			时间格式
		</text>
	</div>
  </template>

  <script>
  import router from '@system.router'
  import storage from '../../common/storage.js'
  import app from '@system.app'

  const TIME_FORMAT_KEY = 'EBOOK_TIME_FORMAT';
  const DEFAULT_TIME_FORMAT = '24h';

  export default {
	private: {
		onSelect:1,
		txtNum:0,
		nowTime: "00:00",
		timer: null,
        timeFormat: DEFAULT_TIME_FORMAT,
	},
	updateTime() {
		const date = new Date();
		let hours = date.getHours();
		let minutes = date.getMinutes();

        if (this.timeFormat === '12h') {
            let ampm = hours >= 12 ? '下午' : '上午';
            hours = hours % 12;
            hours = hours ? hours : 12; 
            minutes = minutes < 10 ? '0' + minutes : minutes;
            this.nowTime = `${ampm} ${hours}:${minutes}`;
        } else {
            hours = hours < 10 ? '0' + hours : hours;
            minutes = minutes < 10 ? '0' + minutes : minutes;
            this.nowTime = `${hours}:${minutes}`;
        }
	},
	onInit() {
        storage.get({
            key: TIME_FORMAT_KEY,
            success: (data) => {
                if (data) {
                    this.timeFormat = data;
                }
                this.updateTime();
                this.timer = setInterval(() => {
                    this.updateTime();
                }, 1000);
            },
            fail: () => {
                this.updateTime();
                this.timer = setInterval(() => {
                    this.updateTime();
                }, 1000);
            }
        });
	},
	onDestroy(){
		clearInterval(this.timer);
	},
	onShow(){
	  storage.get({
		  key: TIME_FORMAT_KEY,
		  success: (data) => {
			if (data === "12h") {
				this.onSelect=2
			} else {
				this.onSelect=1
			}
		  },
		  fail: (data, code) => {
			this.onSelect=1
		  }
	  })
	},
	select(fun){
	  if (fun=='2'){
		  	if(this.onSelect!=2){
				this.onSelect=2
                this.timeFormat = '12h';
			  storage.set({
	  			key: TIME_FORMAT_KEY,
	  			value: '12h',
	  		})
			}
	  }else if (fun=='1'){
			if(this.onSelect!=1){
				this.onSelect=1
                this.timeFormat = '24h';
				storage.set({
					key: TIME_FORMAT_KEY,
					value: '24h',
				})
			}
	  }
	},
	back(){
		router.back();
	}
  }
  </script>

  <style>
  .page {
	  width: 212px;
	  height: 520px;
	  background-color: #000000;
  }
