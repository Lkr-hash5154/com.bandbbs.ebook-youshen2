<template>
	<div class="page">
    <scroll scroll-y="{{true}}" bounces="{{true}}" style="position: absolute;width: 192px;height: 490px;padding-bottom: 50px;">
      <img static src="/common/images/about_img.png" style="width: 100%;"/>

      <text style="position: absolute;left: 24px;top: 112px;width: 164px;height: 35px;font-size: 29px;font-weight: bold;color: #FFFFFF;">
        弦{{appName}}
      </text>
      <text style="position: absolute;left: 24px;top: 148px;width: 164px;height: 35px;font-size: 26px;font-weight: bold;color: rgba(255, 255, 255, 0.6);">
        {{displayVersion}}
      </text>
      <text style="position: absolute;left: 24px;top: 176px;width: 164px;height: 36px;font-size: 16px;font-weight: bold;color: rgba(255, 255, 255, 0.4);">
        {{versionType}}
      </text>
    </scroll>
    <img static src="/common/images/hd.png" style="position: absolute;left: 0px;top: 0px;width: 192px;height: 82px;" />
    <text style="position: absolute;top: 16px;width: 192px;line-height: 32px;font-weight:bold;font-size:18px;color:rgba(255,255,255,0.6);text-align:center;">{{nowTime}}</text>
    <text static style="position: absolute;top: 36px;width: 192px;line-height: 42px;font-weight:bold;font-size:26px;color:white;text-align:center;">关于</text>
	</div>
  </template>
  
  <script>
  import router from '@system.router'
  import app from '@system.app' 
  import storage from '../../utils/storage.js'
  
  export default {
	private: {
    nowTime:':',
    appName:'弦电子书',
    appVer:'1.0.0',
    displayVersion:'1.0.0',
    versionType:'',
    timer:null,
    timeFormat: '24h'
	},
	protected: {
  
	},
	onInit() {
    this.loadTimeFormat();
		const that = this;
    this.timer = setInterval(function(){
      that.updateTime();
    }, 60000);
    this.appName=app.getInfo().name;
    this.appVer=app.getInfo().versionName;
    this.parseVersion();
	},
  onShow(){
	  this.updateTime();
  },
  onDestroy(){
	  if (this.timer) {
      clearInterval(this.timer);
      this.timer = null;
    }
  },
	back(){
		router.back();
	},
  loadTimeFormat() {
    storage.get({
        key: 'EBOOK_TIME_FORMAT',
        success: (data) => {
            if (data) {
                this.timeFormat = data;
            }
            this.updateTime();
        },
        fail: () => {
            this.updateTime();
        }
    });
  },
  updateTime() {
    const date = new Date();
    let hours = date.getHours();
    let minutes = date.getMinutes();
    if (this.timeFormat === '12h') {
        let ampm = hours >= 12 ? '下午' : '上午';
        hours = hours % 12;
        hours = hours ? hours : 12; 
        minutes = minutes < 10 ? '0' + minutes : minutes;
        this.nowTime = `${ampm} ${hours}:${minutes}`;
    } else {
        hours = hours < 10 ? '0' + hours : hours;
        minutes = minutes < 10 ? '0' + minutes : minutes;
        this.nowTime = `${hours}:${minutes}`;
    }
  },
  parseVersion() {
    const version = this.appVer;
    
    const parts = version.split('.');
    let mainVersion = '';
    let versionTypeCode = '';
    
    if (parts.length >= 3) {
      mainVersion = parts.slice(0, 3).join('.');
      
      if (parts.length > 3) {
        versionTypeCode = parts[3];
      } else if (parts[2].includes('RW') || parts[2].includes('BAND')) {
        const thirdPart = parts[2];
        if (thirdPart.includes('RW')) {
          mainVersion = thirdPart.replace('RW', '');
          versionTypeCode = 'RW';
        } else if (thirdPart.includes('BAND10')) {
          mainVersion = thirdPart.replace('BAND10', '');
          versionTypeCode = 'BAND10';
        } else if (thirdPart.includes('BAND9')) {
          mainVersion = thirdPart.replace('BAND9', '');
          versionTypeCode = 'BAND9';
        } else if (thirdPart.includes('BAND')) {
          mainVersion = thirdPart.replace('BAND', '');
          versionTypeCode = 'BAND';
        }
      }
    } else {
      mainVersion = version;
    }
    
    this.displayVersion = mainVersion;
    
    switch(versionTypeCode) {
      case 'RW':
        this.versionType = '红米手表版';
        break;
      case 'BAND10':
        this.versionType = '米环10版';
        break;
      case 'BAND9':
        this.versionType = '米环9版';
        break;
      default:
      case 'BAND':
        this.versionType = '米环Pro版';
        break;
    }
  }
  
  }
  </script>
  
  <style>
  .page {
	  width: 432px;
	  height: 514px;
	  background-color: #000000;
  }
  </style>
