  <script>
  import router from '@system.router'
  import app from '@system.app'
  import storage from '../../utils/storage.js'
  
  
  export default {
  private: {
	  nowTime: "00:00",
	  timer: null,
	  chapterSwitchStyle: 'button',
    timeFormat: '24h',
	  readMode: 'scroll',
	  boldEnabled: true
	},
	protected: {
	  cPath: '',
		name: '',
  
	},
	updateTime() {
	  const date = new Date();
	  let hours = date.getHours();
	  let minutes = date.getMinutes();
  
    if (this.timeFormat === '12h') {
        let ampm = hours >= 12 ? '下午' : '上午';
        hours = hours % 12;
        hours = hours ? hours : 12; 
        minutes = minutes < 10 ? '0' + minutes : minutes;
        this.nowTime = `${ampm} ${hours}:${minutes}`;
    } else {
        hours = hours < 10 ? '0' + hours : hours;
        minutes = minutes < 10 ? '0' + minutes : minutes;
        this.nowTime = `${hours}:${minutes}`;
    }
	},
	onInit() {
    storage.get({
        key: 'EBOOK_TIME_FORMAT',
        success: (data) => {
            if (data) {
                this.timeFormat = data;
            }
            this.updateTime();
        },
        fail: () => {
            this.updateTime();
        }
    });
	  this.timer = setInterval(() => {
		this.updateTime();
	  }, 1000);
		storage.get({ key: 'EBOOK_BOLD_ENABLED', success: (data) => {
			if (data !== undefined && data !== '') {
				this.boldEnabled = data === 'true';
			} else {
				this.boldEnabled = true;
			}
		}, fail: () => {
			this.boldEnabled = true;
		}});
	},
	loadSettings() {
		storage.get({ key: 'EBOOK_CHAPTER_SWITCH_STYLE', success: (data) => { 
			if (data) this.chapterSwitchStyle = data;
		}});
    storage.get({ key: 'EBOOK_TIME_FORMAT', success: (data) => {
        if (data) this.timeFormat = data;
    }});
		storage.get({ key: 'EBOOK_READ_MODE', success: (data) => {
			if (data) this.readMode = data;
		}});
		storage.get({ key: 'EBOOK_BOLD_ENABLED', success: (data) => {
			if (data !== undefined && data !== '') {
				this.boldEnabled = data === 'true';
			} else {
				this.boldEnabled = true;
			}
		}, fail: () => {
			this.boldEnabled = true;
		}});
	},
	onDestroy(){
		if (this.timer) {
      clearInterval(this.timer);
      this.timer = null;
    }
	},
	onReady(){
	},
	resetList(){
  
	},
	onShow(){
		this.loadSettings();
	},
	onBackPress(){
	},
	selectFile(item){
		router.push({
		  uri: '/pages/detail'
		})
	},
	routerTo(url) {
	  router.push({
		uri: '/pages/' + url
	  })
	},
	back(){
		router.back();
	},
	toggleBold() {
		this.boldEnabled = !this.boldEnabled;
		storage.set({
			key: 'EBOOK_BOLD_ENABLED',
			value: this.boldEnabled.toString()
		});
	}
  }
  </script>
  
